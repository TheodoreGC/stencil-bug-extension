{
  "manifest_version": 3,
  "name": "Stencil Bug Extension",
  "version": "1.0",
  "description": "A demo extension to hightlight trustedHTML issue with stencil web components build",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["hello-world/*", "sqrx-dialog/*"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
